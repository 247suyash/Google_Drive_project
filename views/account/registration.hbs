<div class="container-fluid mainConstainer">
    <div class="row">
        <div class="col-lg-3 leftpart">
            <img class='imgRoket' src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
            <h2 class="left-head">WELCOME</h2>
            <p class="left-pera">To our website ,Please Login for Further Process</p>
        </div>
        <div class="col-lg-9 rightpart">
            <form action="/v1/user/register" method="post">
                <div class="row   ">
                    <div class="col-lg-12 registration mt-5 pt-3 pb-3">
                        <h3>Registration Form</h3>
                    </div>
                    <div class="col-sm-6">
                        <div class="inputfields mt-5">
                            <label for="first_Name">First Name :</label>
                            <input type="text" class="form-control" name="firstName" id="first_Name"
                                aria-describedby="emailHelp" placeholder="Enter Your First Name">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="inputfields mt-5">
                            <label for="exampleInputEmail1">Email :</label>
                            <input type="email" name="email" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Enter Your email">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="inputfields mt-5">
                            <label for="Last_Name">Last Name :</label>
                            <input type="text" name="lastName" class="form-control" id="Last_Name"
                                aria-describedby="emailHelp" placeholder="Enter Your Last Name">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="inputfields mt-5">
                            <label for="phone_number">phone :</label>
                            <input type="text" name="phoneNumber" class="form-control" id="phone_number"
                                aria-describedby="emailHelp" placeholder="Enter Your Phone Number">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="inputfields mt-5">
                            <label for="pass">Password :</label>
                            <input type="text" class="form-control" name="password" id="pass"
                                aria-describedby="emailHelp" placeholder="Enter Your Password">
                        </div>
                    </div>
                    <div class="col-sm-11">
                        <button class="button_sign mt-5" value="register" type="submit">Register Account</button>
                    </div>
                    <div class="link pt-3 col-sm-11">
                        <a href="http://localhost:3000/login">Aready Have a Account !</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>