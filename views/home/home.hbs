<div class="row main_Class">
    <header class=" col-lg-12 text-white text-center ">
        <h1 class="display-4 mt-4">Please Upload Your image </h1>
        <img src="https://bootstrapious.com/i/snippets/sn-img-upload/image.svg" alt="" width="100" class="mb-4">
    </header>
    <div class="col-lg-12  py-4">
        <div class=" mx-auto inputBlock">
            <!-- Upload image input-->
            <div class="input-group mb-3 px-2 py-2 rounded-pill bg-white shadow-sm">
                <form action="/v1/Image/image" method="post" enctype="multipart/form-data">
                    <div class="inputchceck">
                        <input id="upload" name="image" type="file" onchange="readURL(this);"
                            class="form-control border 0">
                    </div>
                    <div class="input-group-append mt-4">
                        <label for="upload" class="btn btn-light m-0 rounded-pill px-4">
                            <i class="fa fa-cloud-upload mr-2 text-muted"></i>
                            {{!-- <small class="text-uppercase font-weight-bold text-muted">Choose file</small> --}}
                        </label>
                        <br>
                        {{!-- <div> --}}
                            <button class="submit_btn" type="submit">Save</button>
                            {{!--
                        </div> --}}
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">

    {{#each data}}
    <div class="col-lg-3 img">
        <img src="./upload/{{this.image}}" class="card_img" />
        <button style="width: 80%;" id={{this._id}} data-toggle="modal" data-target="#myModal"
            class="submit_btn mt-3">Share</button>
    </div>
    {{/each}}
</div>


{{!-- <div class="row"> --}}
    {{!-- </div> --}}
<!-- Button trigger modal -->

<div class="container">
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Please add Email Address </h4>
                    <button type="button" class="close" style="color: red;" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form action="/v1/Image/requestAccess" method="post">
                        <div class="form-outline">
                            <label class="form-label" for="typeEmails">Email :</label>
                            <input type="email"  name="email" class="form-controls" />
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" style="margin-top: 18px;" class="submit_btn">Send</button>
                    <button type="button" class="btn btn-default submit_btn" data-dismiss="modal">Close</button>
                </div>
                </form>
            </div>
        </div>
    </div>

</div>